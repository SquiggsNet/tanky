<div class='flex-colomn text-center twenty'>
  {{#if @player}}
    <h2>
      {{@player.name}}
    </h2>
    <div>
      <h3>
        {{@unitName}}s
      </h3>
      <div>
        {{#each @player.units as |unit|}}
          <div class='tank'>{{unit.strength}}</div>
        {{/each}}
      </div>
    </div>
  {{/if}}
</div>